<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="104dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 1"
        android:id="@+id/button_fragment_1"
        android:layout_marginTop="74dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_fragment_2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 2"
        android:id="@+id/button_fragment_2"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button_fragment_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 3"
        android:id="@+id/button_fragment_3"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button_fragment_2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 4"
        android:id="@+id/button_fragment_4"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button_fragment_3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
